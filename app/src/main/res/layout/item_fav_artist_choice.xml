<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    tools:context=".activity.Fav_Artist_Selection">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/fav_artist_img"
        android:layout_width="130dp"
        android:layout_height="130dp"
        android:layout_marginStart="40dp"
        android:layout_marginTop="10dp"
        app:civ_circle_background_color="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/fav_artist_name"
        android:layout_width="130dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="가수이름"
        android:textAlignment="center"
        android:fontFamily="@font/nanum_basic"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/fav_artist_img"
        app:layout_constraintStart_toStartOf="@+id/fav_artist_img"
        app:layout_constraintTop_toBottomOf="@+id/fav_artist_img" />

</androidx.constraintlayout.widget.ConstraintLayout>